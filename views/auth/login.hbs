{{#if userInSession}}
<h1>Welcome{{userInSession.fullName}}</h1>
<a href="/rooms/create">Create a Room</a>

{{/if}}
<a href="/list-rooms">See rooms</a>

{{#unless userInSession}}
<h2>Login</h2>
  <form action="/login" method="POST">
    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />
 
    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />
 
    <button type="submit">Login</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
  {{/unless}}